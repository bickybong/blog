<%- include("partials/header"); -%>
<h1>Home</h1>
<p><%=homePara%></p>

<% posts.forEach(function(post){%>
<h1><%=post.title%></h1>
<p>
  <%=post.body.substring(0, 100) + "..."%>
  <a href="/<%=post.title%>">Read More</a>
  <form action="/delete" method="post">
    <button class="delete" type="submit" name="deleteButton" value="<%=post._id%>">Delete</button>
  </form>
</p>

<%}) %> <%- include("partials/footer"); -%>
